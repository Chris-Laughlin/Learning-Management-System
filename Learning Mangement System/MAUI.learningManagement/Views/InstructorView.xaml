<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.learningManagement.Views.InstructorView"
             Title="InstructorView">
    <VerticalStackLayout Spacing="30">
        <Label 
            Text="Instructor View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Add Student"
            Clicked="AddStudentClicked"/>

        <Button
            Text="Add Course"
            Clicked="AddCourseClicked"/>

        <Button
            Text="Add Student to Course"
            Clicked="AddStudentToCourseClicked"/>
        
        <Button
            Text="Back"
            Clicked="BackClicked"/>
    </VerticalStackLayout>
</ContentPage>