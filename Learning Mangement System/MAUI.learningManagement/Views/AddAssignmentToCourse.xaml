<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.learningManagement.Views.AddAssignmentToCourse"
             Title="AddAssignmentToCourse">
    <VerticalStackLayout Spacing="10">
        <Label 
        Text="Add Module To Course"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Label 
        Text="Courses"
        FontSize="18"
        Margin="0,10,0,0"/>

        <ListView ItemsSource="{Binding Course}"
            SelectedItem="{Binding SelectedCourse, Mode=TwoWay}">
        </ListView>

        <Label 
        Text="Assingment Name"
        FontSize="18"
        Margin="0,10,0,0"/>
        <Entry Text="{Binding Path=assignmentName, Mode=TwoWay}"></Entry>

        <Label 
        Text="Assignment Description"
        FontSize="18"
        Margin="0,10,0,0"/>
        <Entry Text="{Binding Path=assignmentDescription, Mode=TwoWay}"></Entry>

        <Label 
        Text="Assignment Total Points"
        FontSize="18"
        Margin="0,10,0,0"/>
        <Entry Text="{Binding Path=totalPoints, Mode=TwoWay}"></Entry>

        <Button
        Text="Add Assignment"
        Clicked="AddModuleClicked"/>

        <Button
        Text="Back"
        Clicked="BackClicked"/>
    </VerticalStackLayout>
</ContentPage>