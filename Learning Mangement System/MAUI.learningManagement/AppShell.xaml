<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.learningManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.learningManagement"
    xmlns:local2="clr-namespace:MAUI.learningManagement.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.learningManagement">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
            Title="Instructor"
            ContentTemplate="{DataTemplate local2:InstructorView}"
            Route="InstructorView" />
    
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentView}"
        Route="StudentView" />

    

</Shell>
